{
  "private": true,
  "author": "Tony Stark",
  "name": "tony-stark-nodejs-starter",
  "version": "1.0.0",
  "description": "Tony Stark - nodejs - starter. TypeScript, expressjs, sequelize, winston, EJS, jest, supertest.",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "sequelize": "^6.1.0",
    "serve-favicon": "^2.5.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.6",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/sequelize": "^4.28.9",
    "@types/serve-favicon": "^2.5.0",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.9",
    "@types/validator": "^13.1.0",
    "cross-env": "^7.0.2",
    "fs-extra": "^9.0.1",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.0.0",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc -p tsconfig.json",
    "build": "npm-run-all clean lint tsc copy-assets",
    "start": "node .",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --config nodemon.json --exec npm run dev:start",
    "db_migrate": "npx sequelize-cli db:migrate",
    "db_seed_all": "npx sequelize-cli db:seed:all",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run db_migrate && npm run db_seed_all",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset",
    "test": "cross-env NODE_ENV=test jest --no-cache --testTimeout=30000"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
